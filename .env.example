# =================
# GENERAL CONFIG
# =================
NODE_ENV=development
APP_NAME=PropTech Nexus
APP_VERSION=1.0.0

# =================
# API GATEWAY
# =================
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=localhost

# =================
# MICROSERVICES URLS
# =================
USER_SERVICE_URL=http://localhost:3001
PROPERTY_SERVICE_URL=http://localhost:3002
SEARCH_SERVICE_URL=http://localhost:3003
CHAT_SERVICE_URL=http://localhost:3004
ANALYTICS_SERVICE_URL=http://localhost:3005
TRANSACTION_SERVICE_URL=http://localhost:3006
AI_SERVICE_URL=http://localhost:8000

# =================
# DATABASE CONFIG
# =================
# PostgreSQL
DATABASE_URL=postgresql://proptech_user:proptech_pass@localhost:5432/proptech_nexus
DB_HOST=localhost
DB_PORT=5432
DB_NAME=proptech_nexus
DB_USER=proptech_user
DB_PASSWORD=proptech_pass

# MongoDB
MONGODB_URL=mongodb://proptech_user:proptech_pass@localhost:27017/proptech_nexus
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_NAME=proptech_nexus
MONGODB_USER=proptech_user
MONGODB_PASSWORD=proptech_pass

# =================
# CACHE & SEARCH
# =================
# Redis
REDIS_URL=redis://:proptech_pass@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=proptech_pass

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# =================
# SECURITY
# =================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=your-32-character-encryption-key

# =================
# EXTERNAL SERVICES
# =================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=proptech-nexus-media

# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Mapbox
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# DocuSign (Firma Digital)
DOCUSIGN_CLIENT_ID=your-docusign-client-id
DOCUSIGN_CLIENT_SECRET=your-docusign-client-secret
DOCUSIGN_REDIRECT_URI=http://localhost:3000/auth/docusign/callback

# Twilio (SMS/WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@proptechnexus.com

# =================
# PAYMENT PROCESSING
# =================
# Stripe
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =================
# MONITORING & LOGGING
# =================
# Sentry
SENTRY_DSN=your-sentry-dsn

# New Relic
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=PropTech Nexus

# =================
# FRONTEND CONFIG
# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:3002/api
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3001

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# External APIs
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# Payment
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key

# Backend Environment Variables (for development - DEPRECATED: Using Supabase instead)
# DATABASE_URL=postgresql://username:password@localhost:5432/proptech_nexus
# REDIS_URL=redis://localhost:6379
# JWT_SECRET=your-super-secret-jwt-key
# JWT_EXPIRES_IN=7d
# JWT_REFRESH_EXPIRES_IN=30d

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Storage (Optional - Supabase Storage can be used instead)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=proptech-nexus-files

# Search Service (Optional - can use Supabase full-text search)
ELASTICSEARCH_URL=http://localhost:9200

# Development
NODE_ENV=development
PORT=30021

