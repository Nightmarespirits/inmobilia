# Server Configuration
PORT=3002
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=proptech_pass
REDIS_DB=0

# Service URLs
USER_SERVICE_URL=http://localhost:3001
PROPERTY_SERVICE_URL=http://localhost:3002
SEARCH_SERVICE_URL=http://localhost:3003
CHAT_SERVICE_URL=http://localhost:3004

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/api-gateway.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Proxy Configuration
PROXY_TIMEOUT=30000
PROXY_RETRIES=3

# Rate Limiting Configuration (optional overrides)
# RATE_LIMIT_GENERAL_MAX=100
# RATE_LIMIT_AUTH_MAX=5
# RATE_LIMIT_API_MAX=1000
